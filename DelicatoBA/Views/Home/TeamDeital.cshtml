@{
        ViewBag.Title = "Team";
    }

    <h2>Team</h2>

@model DelicatoBA.Models.Team

<div class="container">
    <div class="row">
            <div class="col-lg-4">
                <img src="@Path.Combine("/images/team/",Model.Image)" class="img-fluid" />
            </div>
            <div class="col-lg-8 team-detail">
                <div class="name">@Model.Name</div>
                <div class="job">@Model.Office</div>
                <div class="body">@Html.Raw(Model.Body)</div>
            </div>
        </div>
</div>


